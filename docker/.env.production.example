# =================================================
# ImmoGuinée - Production Environment Variables
# =================================================
# Copiez ce fichier en .env et remplissez les valeurs
# =================================================

# Domain Configuration
DOMAIN=immoguinee.gn
ACME_EMAIL=admin@immoguinee.gn

# Application
APP_ENV=production
APP_DEBUG=false
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key:generate
APP_URL=https://immoguinee.gn

# API URL (for frontend)
NEXT_PUBLIC_API_URL=https://immoguinee.gn/api

# Database (PostgreSQL)
DB_DATABASE=immog_prod
DB_USERNAME=immog_prod_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!

# Redis
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456!

# MinIO (Object Storage)
MINIO_ROOT_USER=immog_minio_admin
MINIO_ROOT_PASSWORD=CHANGE_THIS_MINIO_PASSWORD_789!

# Email (Orange Business SMS or SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@immoguinee.gn
MAIL_FROM_NAME="ImmoGuinée"

# Payment Gateway (Orange Money / MTN)
ORANGE_MONEY_API_KEY=your-orange-money-api-key
ORANGE_MONEY_MERCHANT_ID=your-merchant-id
MTN_MOMO_API_KEY=your-mtn-momo-api-key

# WhatsApp (WAHA)
WAHA_API_KEY=your-waha-api-key

# Passport (OAuth)
PASSPORT_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----
YOUR_PRIVATE_KEY_HERE
-----END RSA PRIVATE KEY-----"

PASSPORT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----
YOUR_PUBLIC_KEY_HERE
-----END PUBLIC KEY-----"

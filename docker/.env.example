# ==============================================
# Docker Environment Variables for ImmoGuin√©e
# Copy this file to .env and fill in your values
# ==============================================

# Database - must match backend/.env
DB_DATABASE=immog_prod
DB_USERNAME=immog_prod_user
DB_PASSWORD=your_secure_db_password_here

# Redis
REDIS_PASSWORD=your_secure_redis_password_here

# MinIO (S3-compatible storage)
MINIO_ROOT_USER=your_minio_admin_user
MINIO_ROOT_PASSWORD=your_secure_minio_password_here

# WAHA (WhatsApp API)
WAHA_API_KEY=your_waha_api_key_here

# Traefik Ports (use 80/443 for production)
TRAEFIK_HTTP_PORT=80
TRAEFIK_HTTPS_PORT=443

# Optional: N8N and Grafana
N8N_PASSWORD=your_n8n_password
GRAFANA_PASSWORD=your_grafana_password

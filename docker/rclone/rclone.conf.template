[spaces]
type = s3
provider = DigitalOcean
endpoint = fra1.digitaloceanspaces.com
access_key_id = DO_SPACES_ACCESS_KEY_PLACEHOLDER
secret_access_key = DO_SPACES_SECRET_KEY_PLACEHOLDER
acl = public-read
env_auth = false
